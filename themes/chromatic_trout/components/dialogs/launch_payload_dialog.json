{
  "screen_name": "launch_payload_dialog",
  "status_bar": "default",
  "windowed_canvas": true,
  "cache_canvases": true,
  "button_map": {
    "a": "select",
    "b": "back",
    "up": "previous",
    "down": "next",
    "left": "back",
    "right": "noop"
  },
  "background": {
    "layers": [
      { "variable_name": "$_INPUT_NAME", "x":  30, "y": 76, "string_template": {"text_size": "medium", "max_chars": 22, "wrap_text": false, "max_lines": 1 }}
    ]
  },
  "menu_items": [
    {
      "id": "Launch",
      "layers": [
        { "image_path": "assets/payload_dialog_option_bg.png","x": 28, "y": 130 },
        { "image_path": "assets/disabled_flame.png","x": 92, "y": 142 }
      ],
      "selected_layers": [
        { "image_path": "assets/payload_dialog_option_bg.png","x": 28, "y": 130 },
        { "image_path": "assets/flame.png","x": 92, "y": 142 },
        { "image_path": "assets/payload_dialog_selected_box.png","x": 28, "y": 130 }
      ],
      "target": "launch_payload",
      "variable": "$_INPUT",
      "animation": [
        { "image_path": "assets/launch_payload_dialog/anim_frame_1_cutout.png", "x": 0, "y": 0 },
        { "image_path": "assets/launch_payload_dialog/anim_frame_2_cutout.png", "x": 0, "y": 0 }
      ]
    },
    {
      "id": "Cancel",
      "layers": [
        { "image_path": "assets/payload_dialog_option_bg.png","x": 172, "y": 130 },
        { "image_path": "assets/disabled_x.png","x": 233, "y": 142 }
      ],
      "selected_layers": [
        { "image_path": "assets/payload_dialog_option_bg.png","x": 172, "y": 130 },
        { "image_path": "assets/x.png","x": 233, "y": 142 },
        { "image_path": "assets/payload_dialog_selected_box.png","x": 172, "y": 130 }
      ],
      "target": "back"
    }
  ]
}
